name = "Setup and Run"
author = 38830877
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/setup-database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Setup Database with Dummy Data"
author = 38830877
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/setup-database.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/insert-dummy-data.js"

[[workflows.workflow.tasks]]
